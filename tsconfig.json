{
  // 继承自 "@vue/tsconfig/tsconfig.dom.json"，表示当前配置继承自该基础配置文件。
  // 这个基础文件通常包含 Vue 项目所需的默认 TypeScript 配置（适用于浏览器环境）。
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // 编译器选项
  "compilerOptions": {
    // 设置模块解析的根目录为当前目录（即项目根目录）。
    "baseUrl": ".",
    // 不允许有未使用的本地变量，启用此选项会在编译时提示或报错未使用的变量。
    "noUnusedLocals": true,
    // 不允许有未使用的函数参数，启用后会检查函数中未使用的参数。
    "noUnusedParameters": true,
    // 禁止 switch 语句中 case 没有 break 导致的"穿透"行为，提升代码安全性。
    "noFallthroughCasesInSwitch": true,
    // 以下是从tsconfig.lib.json合并的配置
    // 启用项目引用支持
    "composite": true,
    // 指定库文件
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    // 指定类型定义
    "types": ["node"],
    // 跳过库检查以提高构建速度
    "skipLibCheck": true,
    // 生成声明文件
    "declaration": true,
    // 只输出声明文件，不输出JS文件
    "emitDeclarationOnly": true,
    // 输出目录
    "outDir": "dist"
  },
  "include": ["env.d.ts", "components/**/*", "components/**/*.vue"],
  "exclude": ["node_modules", "dist", "site"]
}
